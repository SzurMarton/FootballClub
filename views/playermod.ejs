<%- include('header') -%>
<%- include('navbar') -%>
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="pt-5"><% if (typeof player === 'undefined') { %>New Player<% }else{ %>Player Modification<% } %></h2>
                <form method="post">
                    <input type="hidden" name="_id" value="<%=(typeof player === 'undefined') ? '' : player._id%>">
                    <div class="form-group">
                        <label for="playerName">Name</label>
                        <input type="text" class="form-control" id="playerName" name="playerName" value="<%=(typeof player === 'undefined') ? '' : player.playerName%>">
                    </div>
                    <div class="form-group">
                        <label for="birthdate">BirthDate</label>
                        <input type="text" class="form-control" id="birthdate" name="birthdate" value="<%=(typeof player === 'undefined') ? '' : player.birthDate%>">
                    </div>
                    <div class="form-group">
                        <label for="position">Position</label>
                        <input type="text" class="form-control" id="position" name="position" value="<%=(typeof player === 'undefined') ? '' : player.position%>">
                    </div>
                    <div class="form-group">
                        <label for="avgrating">Avg Rating</label>
                        <input type="text" class="form-control" id="avgrating" name="avgrating" value="<%=(typeof player === 'undefined') ? '' : player.avgRating%>">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Save"/>
                    <a class="btn btn-link" href="/player/<%=team._id%>">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include('footer') -%>